<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="AdminMatri.Popups.CallComment">
    <VerticalStackLayout>
        <Editor Text="{Binding Comment}" MaxLength="500" HeightRequest="300" WidthRequest="300" Margin="10,10,10,10"/>
        <Button Command="{Binding SaveCommand}" Text="Comment and Update" IsVisible="{Binding IsSave}"/>
    </VerticalStackLayout>
</toolkit:Popup>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChristianJodi.Views.ForgotPasswordPage"
             Title="Forgot Password" >

    <StackLayout>
        <Grid Margin="0,12,0,16" Padding="0"  ColumnSpacing="16" RowSpacing="4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Entry Grid.Row="0" Placeholder="EmailId/Mobile" Text= "{Binding EmailId}"/>

            <Button Grid.Row="1" Command="{Binding ForgotPasswordCommand}" HorizontalOptions="Center"
                Text="FORGOT PASSWORD" WidthRequest="245" />

            <Button Grid.Row="2" Command="{Binding CancelCommand}" HorizontalOptions="Center" Text="CANCEL"
                WidthRequest="245" />

            <Frame Grid.Row="3">
                <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="True"   Color="Orange"  />
            </Frame>

        </Grid>
    </StackLayout>

</ContentPage>
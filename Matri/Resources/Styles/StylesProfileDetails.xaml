<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:control="clr-namespace:Matri.Controls"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Common style for icon label  -->
    <Style x:Key="stylPDLblItem" TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource Gray600}" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="HorizontalOptions" Value="StartAndExpand" />
        <Setter Property="FontFamily" Value="Roboto-Regular" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style x:Key="stylPDLblTitle" TargetType="Label">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="FontFamily" Value="Roboto-Medium" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

</ResourceDictionary>
